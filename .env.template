# This is a template for the .env file.
# Copy this file to .env and fill in the values.

# PostgreSQL Settings
POSTGRES_DB=clinic_erp
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123

# FastAPI (patient_api) Secret Key
# Generate a secure key, e.g., with: openssl rand -hex 32
PATIENT_API_SECRET_KEY=your-secret-key-here

# Django (scheduling_service) Settings
# Generate a secure key, e.g., with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SCHEDULING_SERVICE_SECRET_KEY='django-insecure-your-secret-key-here'
# Comma-separated list of allowed hosts, e.g., localhost,127.0.0.1,.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1
# Comma-separated list of allowed CORS origins, e.g., http://localhost:3000,http://yourfrontend.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Google Calendar API Key
GOOGLE_CALENDAR_API_KEY=your-google-api-key

# Airflow Fernet Key
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=your-fernet-key-here

# Grafana Admin Password
GF_SECURITY_ADMIN_PASSWORD=admin

# Full database URL for application services
# Note: The services in docker-compose will use the credentials above to connect.
# This URL is for services that need the full connection string.
DATABASE_URL=postgresql://admin:password123@postgres:5432/clinic_erp

# Redis URL
REDIS_URL=redis://redis:6379

# Kafka Bootstrap Servers
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
